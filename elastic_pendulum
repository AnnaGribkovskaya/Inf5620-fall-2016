import numpy
from numpy import * # this syntax takes all definitions from the numpy and places them into current namespace, no need to put np. in front of numpy definition
import matplotlib.pyplot as plt
from matlotlib.pyplot import animation

def simulate(
    beta=0.9,                 # dimensionless parameter
    Theta=9,                  # initial angle in degrees
    epsilon=0,                # initial stretch of wire
    num_periods=6,            # simulate for num_periods
    time_steps_per_period=60, # time step resolution
    plot=True,                # make plots or not
    ):

N=num_periods * time_steps_per_period   # number of timesteps
dt=float(2*pi)/time_steps_per_period    # value of timestep
Rad=pi*Theta/180 			            # convert to radians
B=beta/(1-beta)                         # new variable for convinience
